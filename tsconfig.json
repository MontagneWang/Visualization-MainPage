{
  "compilerOptions": {
  "target": "ESNext",
  "useDefineForClassFields": true,
  "module": "ESNext",
  "moduleResolution": "Node",
  "strict": true,
  "jsx": "preserve",
  "resolveJsonModule": true,
  "isolatedModules": true,
  "esModuleInterop": true,
  "lib": [
    "ESNext",
    "DOM"
  ],
  "skipLibCheck": true,
  "noEmit": true
},
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
    //    "src/views/IntroLing.vue",
    //    "src/App.vue"
  ],
  "exclude": [
    "src/temp/NavBar.vue"
    // 排除文件
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
